gemspec

rails_version = ENV.fetch("RAILS_VERSION", "8.0")
gem "rails", "~> #{rails_version}.0"

gem "solid_queue"

gem "standard", "~> 1.44"
gem "github_changelog_generator", require: false
gem "gem-release", require: false
